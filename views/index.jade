#login-splash
  img(src="/images/sadpandas.png", alt="Sad Pandas", title="Sad Pandas")
  
  form(onsubmit="return false;")
    label(for="nick") Enter your nick:
    p
      input#nick(type='text', name='user[name]', autofocus)
    #login-fail(style='display: none;') Sorry, this nick has already been knicked.
    p
      input#start(type='button', value='Start')
      
    
  p Works best on Chrome, Safari and the iPad.

#wrapper
  #header
    img(src="/images/sadpandas.png", alt="Sad Pandas", title="Sad Pandas")
    #vote
      iframe(src='http://nodeknockout.com/iframe/eficode', frameborder='0', scrolling='no', allowtransparency='true', width='115', height='25')
    
  #main
    ul#player-list
    ul#instructions
      li MOVE: ARROW KEYS
      li SHOOT: SPACE
      li SCORES: TAB
    #game
      canvas#gjs-canvas
